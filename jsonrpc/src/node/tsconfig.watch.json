{
    "compilerOptions": {
        "module": "node16",
        "moduleResolution": "node16",
        "rootDir": ".",
        "types": [
            "node"
        ],
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "declaration": true,
        "stripInternal": true,
        "sourceMap": true,
        "declarationMap": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "assumeChangesOnlyAffectDirectDependencies": true,
        "target": "es2022",
        "lib": [
            "es2023"
        ],
        "outDir": "../../lib/node",
        "tsBuildInfoFile": "../../lib/node/watch.tsbuildInfo",
        "incremental": true,
        "composite": true
    },
    "include": [
        "."
    ],
    "exclude": [
        "test"
    ],
    "references": [
        {
            "path": "../common/tsconfig.watch.json"
        }
    ]
}