{
    "compilerOptions": {
        "types": [
            "mocha"
        ],
        "module": "umd",
        "moduleResolution": "node",
        "rootDir": ".",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "declaration": true,
        "stripInternal": true,
        "sourceMap": true,
        "declarationMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "target": "es5",
        "lib": [
            "es2015"
        ],
        "outDir": "../../lib/umd/test",
        "tsBuildInfoFile": "../../lib/umd/test/watch.tsbuildInfo",
        "incremental": true
    },
    "include": [
        "."
    ],
    "references": [
        {
            "path": "../tsconfig.watch.json"
        }
    ]
}