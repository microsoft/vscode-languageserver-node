{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": ".",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "declaration": true,
        "stripInternal": true,
        "sourceMap": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "target": "es2020",
        "lib": [
            "es2020"
        ],
        "outDir": "../../lib/common",
        "tsBuildInfoFile": "../../lib/common/publish.tsbuildInfo",
        "incremental": true,
        "composite": true
    },
    "include": [
        "."
    ],
    "exclude": [
        "test"
    ]
}