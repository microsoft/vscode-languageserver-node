{
    "compilerOptions": {
        "module": "nodenext",
        "rootDir": ".",
        "types": [],
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "declaration": true,
        "stripInternal": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "target": "es2020",
        "lib": [
            "es2020"
        ],
        "outDir": "../../lib/common",
        "tsBuildInfoFile": "../../lib/common/compile.tsbuildInfo",
        "incremental": true,
        "composite": true
    },
    "include": [
        "."
    ]
}