{
    "compilerOptions": {
        "types": [
            "vscode"
        ],
        "module": "node16",
        "moduleResolution": "node16",
        "rootDir": ".",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "declaration": true,
        "stripInternal": true,
        "sourceMap": true,
        "declarationMap": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "assumeChangesOnlyAffectDirectDependencies": true,
        "target": "es2022",
        "lib": [
            "es2023"
        ],
        "outDir": "../../lib/common",
        "tsBuildInfoFile": "../../lib/common/watch.tsbuildInfo",
        "incremental": true,
        "composite": true
    },
    "include": [
        "."
    ]
}