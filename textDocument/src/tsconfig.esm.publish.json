{
    "compilerOptions": {
        "module": "es6",
        "moduleResolution": "node",
        "rootDir": ".",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "declaration": true,
        "stripInternal": true,
        "sourceMap": false,
        "target": "es5",
        "lib": [
            "es2015"
        ],
        "outDir": "../lib/esm",
        "tsBuildInfoFile": "../lib/esm/publish.tsbuildInfo",
        "incremental": true,
        "composite": true
    },
    "include": [
        "."
    ],
    "exclude": [
        "test"
    ]
}